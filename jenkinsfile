pipeline {
    agent { label: "any" }
     triggers { pollSCM('* * * * *') }
      stages {
        stage(vcs) {
            steps {
                git branch:"master",url: "https://github.com/ramesh1469/ansibletask.git"       
             } 
        }
       stage(ansible) {
          steps {
            sh "cd 31-01-23 ",
            sh "ansible-playbook -i hosts openjdk.yaml"  
          }
       } 
   }
}
